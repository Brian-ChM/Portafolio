---
const { title, description, image, tags, code, page } = Astro.props;
---

<article class="rounded-md shadow-xl bg-white">
  <figure class="relative">
    <img src={image} alt="Editor de Markdown" class="rounded-t-lg" />
    <figcaption
      class="absolute bottom-0 left-0 right-0 p-4 pt-8 bg-gradient-to-t from-slate-950 via-slate-950 to-transparent"
    >
      <div
        class="flex justify-center items-center flex-wrap gap-1 text-neutral-100"
      >
        {
          tags.map((tag: string) => (
            <span class="text-xs font-bold border border-blue-500 bg-blue-500 bg-opacity-30 rounded-full px-4">
              {tag}
            </span>
          ))
        }
      </div>
    </figcaption>
  </figure>
  <div class="p-4 pt-2 rounded-b-lg">
    <h3 class="text-2xl font-bold">
      <a href="#" class="text-green-600 hover:text-green-500 transition-colors">
        {title}
      </a>
    </h3>
    <p class="text-sm leading-5 tracking-tight">
      {description}
    </p>

    <div class="w-full flex gap-2 mt-4">
      <a
        href={code}
        class="px-4 py-2 text-center w-full border border-blue-500 hover:bg-blue-500/30 font-semibold transition-all text-gray-700 hover:text-black rounded-lg"
        >Ver Codigo</a
      >
      <a
        href={page}
        target="_blank"
        class="px-4 py-2 text-center w-full bg-gradient-to-b from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-600 font-semibold transition-all text-neutral-100 hover:text-white rounded-lg"
        >Visitar Proyecto</a
      >
    </div>
  </div>
</article>
