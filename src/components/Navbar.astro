---
import BurgerMenu from "./BurgerMenu.astro";
import Menu from "./Menu.astro";
---

<nav
  id="nav"
  class="fixed inset-0 z-50 rounded-full h-[66px] p-2 w-[calc(100%-32px)] lg:w-full mx-auto max-w-screen-lg flex justify-between items-center border bg-white shadow-md mt-2"
>
  <div
    id="nav-info"
    class="grid grid-cols-[auto,1fr] gap-2 items-center scale-0 opacity-0 transition-all"
  >
    <img
      class="rounded-full min-w-12 w-12 min-h-12 h-12 object-cover"
      src="/Brian.jpg"
      alt="Brian Chaparro"
    />
    <div>
      <h1
        class="text-lg text-nowrap font-bold bg-gradient-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent"
      >
        Brian Chaparro
      </h1>
      <h2 class="text-xs italic text-nowrap text-green-600">
        Desarrollador Web Front-end
      </h2>
    </div>
  </div>

  <Menu />
  <BurgerMenu />
</nav>

<script>
  const navInfo = document.getElementById("nav-info")!;

  document.addEventListener("scroll", () => {
    if (window.scrollY > 300) {
      navInfo.style.opacity = "1";
      navInfo.style.transform = "scale(1)";
    } else {
      navInfo.style.opacity = "0";
      navInfo.style.transform = "scale(0)";
    }
  });
</script>
