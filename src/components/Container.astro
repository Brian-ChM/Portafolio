---
type Props = {
  id?: string;
};

const { id }: Props = Astro.props;
---

<section
  id={id}
  class="px-3 flex flex-col justify-center items-center min-h-screen min-w-full py-10 odd:bg-gradient-to-b from-gray-900 to-gray-800 bg-gradient-to-t"
>
  <div class="flex flex-col justify-center items-center gap-12 max-w-screen-lg">
    <slot />
  </div>
</section>
